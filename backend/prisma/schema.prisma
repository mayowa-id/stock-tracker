// Prisma Schema for Stock Trading API (SQLite)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String      @id @default(cuid())
  email         String      @unique
  password      String      // Will be hashed
  firstName     String?
  lastName      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relations
  accounts      Account[]
  orders        Order[]
  positions     Position[]
  watchlists    Watchlist[]
  
  @@map("users")
}

// Account model (each user has one trading account)
model Account {
  id                String    @id @default(cuid())
  userId            String    @unique
  cash              Float     @default(100000)
  buyingPower       Float     @default(100000)
  portfolioValue    Float     @default(100000)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("accounts")
}

// Position model (holdings)
model Position {
  id                String    @id @default(cuid())
  userId            String
  symbol            String
  quantity          Int
  avgPrice          Float
  currentPrice      Float
  marketValue       Float
  costBasis         Float
  unrealizedGain    Float
  unrealizedGainPct Float
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol])
  @@map("positions")
}

// Order model
model Order {
  id                String      @id @default(cuid())
  userId            String
  symbol            String
  quantity          Int
  side              String      // 'BUY' or 'SELL'
  type              String      // 'MARKET', 'LIMIT', etc.
  status            String      @default("OPEN") // 'OPEN', 'FILLED', 'CANCELED'
  limitPrice        Float?
  stopPrice         Float?
  filledPrice       Float?
  filledQuantity    Int         @default(0)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  filledAt          DateTime?
  canceledAt        DateTime?
  
  // Relations
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("orders")
}

// Watchlist model
model Watchlist {
  id          String           @id @default(cuid())
  userId      String
  name        String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       WatchlistItem[]
  
  @@map("watchlists")
}

// WatchlistItem model (stocks in a watchlist)
model WatchlistItem {
  id          String      @id @default(cuid())
  watchlistId String
  symbol      String
  addedAt     DateTime    @default(now())
  
  // Relations
  watchlist   Watchlist   @relation(fields: [watchlistId], references: [id], onDelete: Cascade)
  
  @@unique([watchlistId, symbol])
  @@map("watchlist_items")
}

// Portfolio History model (for charts)
model PortfolioHistory {
  id              String    @id @default(cuid())
  userId          String
  portfolioValue  Float
  cash            Float
  timestamp       DateTime  @default(now())
  
  @@map("portfolio_history")
}